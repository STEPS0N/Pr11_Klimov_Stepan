<Window x:Class="Pr11_Klimov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr11_Klimov"
        mc:Ignorable="d"
        Title="ИСП-23-1" Height="499" Width="820" MinHeight="500" MinWidth="820" MaxHeight="500" MaxWidth="820">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5,5,5,388">
            <Label Margin="10" FontSize="15" FontWeight="Bold" Content="Введите разделитель:" VerticalAlignment="Center"/>
            <TextBox x:Name="razdel" TextWrapping="Wrap" Width="47" Height="33" FontSize="15" VerticalAlignment="Center"/>
            <Button Click="SortText" Content="Вывести список" Height="30" FontSize="15" Width="150" Margin="400, 10"/>
        </StackPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible" Margin="0,60,400,0" ScrollChanged="ScrollViewer_ScrollChanged">
            <StackPanel x:Name="parent" Orientation="Vertical">

            </StackPanel>
        </ScrollViewer>
        <StackPanel Orientation="Vertical" Margin="400,60,0,0">
            <Label Width="400" Height="30" VerticalAlignment="Top" Content="Список имён всех учащихся" FontSize="15" FontWeight="Bold"/>
            <Label x:Name="SortName" Width="392" Height="394" BorderThickness="2" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Window>
